<% @title = "Book Club" %>
<header class="intro-header" style="background-image: url('https://images.unsplash.com/photo-1460324558840-8df3143cd908?dpr=1.25&auto=format&fit=crop&w=1500&h=2250&q=80&cs=tinysrgb&crop=')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <% if current_user %>
                        <h1>Hello, <%= current_user.username %>.</h1>
                    <% else %>
                        <h1>Welcome.</h1>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</header>


<div class="text-center container" style="padding-bottom: 150px">
    <% if @active_club %>
        <h3>Recently Active Club:</h3>
        <div class="col-lg-4 col-md-4 col-sm-3"><!--SPACE FILLER--></div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <h3><%= link_to @active_club.name, @active_club %></h3>
                <% current_book = @active_club.readings.where(:current => true)[0].book %>
                <p class="text-muted"><%= link_to current_book.title %></p>
                <img src="<%= current_book.image %>"  class="img-responsive center-block prev-book-cover">
            </div>
        <div class="col-lg-4 col-md-4 col-sm-3"><!--SPACE FILLER--></div>
    <% end %>
</div>
