<div class="fluid-container">
    <div id="my_clubs">
        <h1>My Clubs</h1>
        <% current_user.memberships.each do |m| %>
        <% club = current_user.clubs.find(m.club_id) %>
            <% if m.admin == true then %>
                <%= link_to club.name, club  %> | Admin
                <br>
            <% elsif m.admin == false then %>
                <%= link_to club.name, club  %> | Member
                <br>
            <% end %>
        <% end %>
    </div>
</div>
