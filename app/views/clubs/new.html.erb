<% @title = "New Book Club" %>
<div class="container text-center new_club">
    <h1>New Club</h1>
    <br><br>
    
    <%= form_for @club do |f| %>
        
        <h4 id="club_name">
            <%= f.label :name %> <br>
            <%= f.text_field :name %> <br>
        </h4>
        <br>
        <h4>
            <%= f.label :description %> (optional) <br>
            <%= f.text_area :description %> <br>
        </h4>
        <br>
        <p>
            <%= f.submit class: "btn btn-primary" %>
        </p>
        <p>
            <%= link_to "Cancel", root_path, style: "color: red" %>
        </p>
    <% end %>
</div>