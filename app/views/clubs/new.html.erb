<% @title = "New Book Club" %>
<div class="container text-center new_club">
    <h1>New Club</h1>
    <br><br>
    
    <%= form_for @club do |f| %>
        <% if @club.errors.any? %>
            <div id="errors">
                <h2><%= pluralize(@club.errors.count, "error") %>  prevented this post from saving </h2>
                <ul>
                    <% @club.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <h4 id="club_name">
            <%= f.label :name %> <br>
            <%= f.text_field :name %> <br>
        </h4>
        <br>
        <h4>
            <%= f.label :description %> <br>
            <%= f.text_area :description %> <br>
        </h4>
        <br>
        <p>
            <%= f.submit class: "btn btn-primary" %>
        </p>
    <% end %>
</div>