<% @title = "New Announcement" %>
<div class="container text-center">
    <h1>New Announcement</h1>
    <br><br>
    <%= form_for [@club, @announcement] do |f| %>
        
        <h4 id="club_name">
            <%= f.label :subject %> <br>
            <%= f.text_field :subject %> <br>
        </h4>
        <br>
        <h4>
            <%= f.label :body %> <br>
            <%= f.text_area :body %> <br>
        </h4>
        <br>
        <p>
            <%= f.submit class: "btn btn-primary" %>
        </p>
        <p>
            <%= link_to "Cancel", root_path, style: "color: red" %>
        </p>
    <% end %>
</div>