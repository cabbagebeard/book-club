<% @title = @club.name + " announcements" %>
<br>
<div class="container">
    <h1 class="text-center">Announcements</h1>
    <br>
    <div class="row">
        <% @announcements.each do |a| %>
            <div class="jumbotron">
                    <p class="text-muted"><%= a.user.username %></p>
                    <p class="text-muted"><%= a.created_at.strftime("%b %d") %></p>
                    <br>
                    <h2><%= a.subject %></h2>
                    <p class="lead"><%= a.body %></p>
            </div>
        <% end %>
    </div>
</div>
